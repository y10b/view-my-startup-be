generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                   Int          @id @default(autoincrement())
  companyName          String       @unique @map("name") //회사명
  description          String
  category             String
  realInvestmentAmount Float        @default(0) @map("totalInvestment") //실제 누적 투자 금액
  revenue              Float        @default(0)
  employeesNumber      Float        @default(0) @map("employees") //고용 인원
  selectedNumber       Int          @default(0) @map("selectedCompany") //선택 횟수
  comparedNumber       Int          @default(0) @map("comparedCompany") //비교 횟수
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  imageUrl             String?
  investment           Investment[]

  @@map("Company")
}

model Investment {
  id             Int      @id @default(autoincrement())
  investorName   String   @map("name") //투자자 이름
  accessCode     String   @map("password")
  investedAmount Float    @map("amount") //가상 투자 금액
  comment        String
  updateAt       DateTime @updatedAt
  createdAt      DateTime @default(now())
  Company        Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId      Int?
}
